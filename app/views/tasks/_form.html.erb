<%= form_for [@project, @task] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= label_tag :tags %>
    <%= text_field_tag :tags, params[:tags] %>
  </p>
  <%= f.submit %>
<% end %>
